import random as rng

def randomcard():
    random_card = rng.randrange(1, 11)
    return random_card

print('''\033[1;36mWelcome to Kevin's Blackjack casino!
The rules are simple, either hit(H) or stand(S)
Whoever gets closer to 21, the dealer or player, wins!!
Be careful though, if you go over, your busted!{}''')

dealer_hand = []
dealer_hand.append(randomcard())
dealer_hand.append(randomcard())
dealer_total = sum(dealer_hand)

player_hand = []
player_hand.append(randomcard())
player_hand.append(randomcard())
player_total = sum(player_hand)
playerplay = input('''\033[1;33m

This is your hand: {}. For a total of: {}
Type H to hit, or type S to stand!'''.format(player_hand, player_total)).upper()

if player_total == 21:
    print('''Congrats you hit blackjack!
You finished with a hand of {}, for a total of {}!'''.format(player_hand, player_total))
    exit()

elif player_total > 21:
    print('''Sorry you hit bust!
You finished with a hand of {}, for a total of {}!'''.format(player_hand, player_total))
    exit()

while player_total < 21:

    if playerplay == 'H' or 'HIT':
        player_hand.append(randomcard())
        player_total = sum(player_hand)
        break

        if player_total > 21:
            print('''Sorry but you busted!
You finished with a hand of {}, for a total of {}!'''.format(player_hand, player_total))
            exit()

        elif player_total < 21:
            playerplay = input('''\033[1;33m

This is your hand: {}. For a total of: {}
Type H to hit, or type S to stand!'''.format(player_hand, player_total)).upper()



while player_total < 21:

    if playerplay == 'S' or 'STAND':
        player_total = sum(player_hand)

        if player_total < dealer_total:
            print('''Sorry but you lost!
The dealer beat you with a hand of {}, for a total of {}!
While you had a hand of {}, for a total of {}!'''.format(dealer_hand, dealer_total, player_hand, player_total))
            break

        elif player_total > dealer_total:
            print('''Congratulations you've won!
The dealer beat you with a hand of {}, for a total of {}!
While you had a hand of {}, for a total of {}!'''.format(dealer_hand, dealer_total, player_hand, player_total))
        break






if dealer_total == 21:
    print('''Sorry you lost!
The dealer hit blackjack with a hand of {}, for a total of {}!'''.format(dealer_hand, dealer_total))

elif dealer_total > 21:
    print('''Congratulations you've won!
The dealer busted with a hand of {}, for a total of {}!'''.format(dealer_hand, dealer_total))

while dealer_total <= 16:
    dealer_hand.append(randomcard())
    dealer_total = sum(dealer_hand)

    if dealer_total == 21:
        print('''Sorry you lost!
    The dealer hit blackjack with a hand of {}, for a total of {}!'''.format(dealer_hand, dealer_total))

    elif dealer_total > 21:
        print('''Congratulations you've won!
    The dealer busted with a hand of {}, for a total of {}!'''.format(dealer_hand, dealer_total))
